<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sunshaogang.animation">


    <uses-sdk
        android:maxSdkVersion="19"
        android:minSdkVersion="8" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name">
        <activity android:name="com.AnimationPlayground.DrawPathSvg.DrawPathSvgActivity">

        </activity>
        <activity android:name="com.AnimationPlayground.DrawPath.ProgressActivity">

        </activity>
        <activity android:name="com.AnimationPlayground.Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.AnimationPlayground.DynamicForm.DynamicFormActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.AnimationPlayground.FragmentAnimation.FragmentAnimationActivity"
            android:screenOrientation="portrait" />

    </application>
</manifest>
